#include <iostream>
#include <conio.h>

using namespace std;

int main()

{
	int Apu, se, va, de, los, simson;
	cout << "ingrese el numero de acciones del primer integrante: "<< endl;
	cin >> Apu;
	cout << "ingrese el numero de acciones del segundo integrante: " << endl;
	cin >> se;
	cout << "ingrese el numero de acciones del tercer integrante: " << endl;
	cin >> va;
	cout << "ingrese ganancia del a침o: " << endl;
	cin >> de;

